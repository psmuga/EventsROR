<!DOCTYPE html>
<html>
  <head>
    <title>Bilety</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to 'Home', root_path, :class => "navbar-brand" %>

    <div class="navbar-nav">
      <% if user_signed_in? %>
      <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Logged in as <strong><%= current_user.email %></strong></a>
        
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-item nav-link' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-item nav-link' %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'nav-item nav-link' %>
        <%= link_to "Login", new_user_session_path, :class => 'nav-item nav-link' %>
      <% end %> 
    </div>
  </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p> 
    <% end %>

    <%= yield %>
  </body>
</html>
