<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this ticket from being saved:</h2>
  
        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :artist %>
      <%= form.text_field :artist %>
    </div>
  
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
  
    <div class="field">
      <%= form.label :price_low %>
      <%= form.text_field :price_low %>
    </div>
  
    <div class="field">
      <%= form.label :price_high %>
      <%= form.text_field :price_high %>
    </div>
    <div class="field">
        <%= form.label :event_date %>
        <%= form.date_select :event_date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 20}, {required: true} %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  